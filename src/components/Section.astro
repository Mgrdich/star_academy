---
import type { IDS_TYPE } from "./helpers/constants";
interface Props {
  header: string;
  id: IDS_TYPE;
}

const { header, id } = Astro.props;
---

<section id={id} class="pb-12 pt-20 lg:pb-[90px] lg:pt-[120px]">
  <div class="container mx-auto">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <h2
          class="mb-3 text-center text-3xl font-bold leading-[1.2] text-secondary sm:text-4xl md:text-[40px]"
        >
          {header}
        </h2>
        <slot />
      </div>
    </div>
  </div>
</section>
