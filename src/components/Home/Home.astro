---
import Icon from "../AppIcon.astro";
---

<section
  id="home"
  class="relative bg-white pb-[110px] pt-[120px] lg:pt-[150px]"
>
  <div class="container mx-auto">
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4 lg:w-5/12">
        <div>
          <h1
            class="mb-5 text-4xl font-bold !leading-[1.208] sm:text-[42px] lg:text-[40px] xl:text-5xl"
          >
            Licensed group <span class="text-primary">Child</span> care for 30 months
            to 5 year old group age
          </h1>
          <p class="mb-8 max-w-[480px] text-lg">
            Star Academy of Montessori is pleased to welcome your family to our
            unique program which provides an innovative learning program based
            on the Montessori and Reggio Emilia approaches.
          </p>
        </div>
      </div>
      <div class="hidden px-4 lg:block lg:w-1/12"></div>
      <div class="w-full px-4 lg:w-6/12">
        <div class="lg:ml-auto lg:text-right">
          <div class="relative z-10 inline-block pt-11 lg:pt-0">
            <img
              src="/home.jpg"
              alt="hero"
              class="max-w-full rounded-[10px] rounded-tl-[150px] lg:ml-auto"
            />
            <span class="absolute -bottom-8 -left-8 z-[-1]">
              <Icon name="hero" />
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
