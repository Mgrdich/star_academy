---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="w-full px-4 md:w-1/2 lg:w-1/3">
  <div
    class="mb-5 flex flex-col items-center justify-center rounded-[20px] bg-white p-5 hover:shadow-lg md:px-7 xl:px-10"
  >
    <div
      class="mb-8 flex size-[70px] items-center justify-center rounded-2xl bg-primary"
    >
      <div class="w-10">
        <slot />
      </div>
    </div>
    <h3 class="mb-4 text-center text-2xl font-semibold">{title}</h3>
  </div>
</div>
